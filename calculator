#include <stdio.h>
void main()
{
  int i1, i2, res1, res2, res3, res5;
  float res4;
  
  printf("첫번째 숫자를 입력 : ");
  scanf_s("%d" ,&i1);
  
  printf("두번째 숫자를 입력 : ");
	scanf_s("%d", &i2);

	res1 = i1 + i2;
	res2 = i1 - i2;
	res3 = i1 * i2;
	res4 = i1 / i2;
	res5 = i1 % i2;

	printf("%d + %d = %d \n", i1, i2, res1);
	printf("%d - %d = %d \n", i1, i2, res2);
	printf("%d * %d = %d \n", i1, i2, res3);
	printf("%d / %d = %f \n", i1, i2, res4);
	printf("%d %% %d = %d \n", i1, i2, res5);
}
  
